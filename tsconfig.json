{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@root/*": [
                "./*"
            ]
        },
        "lib": [
            "es2021",
            "dom"
        ]
    },
    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}